---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="robots" content="none" />
    <title>{title}</title>
  </head>
  <body>
    <header class="border-b py-12 mb-12">
      <div class="container mx-auto">
        <div class="font-bold text-2xl">The Duxin Lab</div>
      </div>
    </header>
    <main class="container mx-auto py-12">
      <slot />
    </main>
    <footer class="border-t py-12 mt-12">
      <div class="container mx-auto">Copyright &copy; The Duxin Lab.</div>
    </footer>
  </body>
</html>
