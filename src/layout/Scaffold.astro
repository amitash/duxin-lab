---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="robots" content="none" />
    <title>{title}</title>
  </head>
  <body>
    <div class="container mx-auto py-12">
      <slot />
    </div>
  </body>
</html>
